<% if owner? %>
<div class="d-flex justify-content-end">
  <div>
    <%= link_to "Edit", edit_house_path(@house), class: "btn btn-outline-warning" %>
    <%= link_to "Delete", house_path(@house), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
  </div>
</div>
<% end %>

<div class="row mt-2">
  <div class="col-12 col-lg-6">
    <div>
      <h2 class="text-center">Specification</h2>
      <b>Rent</b>: $ <%= @house.rent.to_i %> <br>
      <b>Deposit</b>: $ <%= @house.deposit.to_i %> <br>
      <b>Preferred gender</b>: <%= int_to_gender(@house.preferred_gender) %>
    </div>

    <div class="mt-3">
      <h2 class="text-center">Address</h2>
      <address>
        <%= @house.address.address_1 %>,<%= @house.address.address_2 %><br>
        <%= @house.address.city %> <%= @house.address.state %>, <%= @house.address.zip_code %>
      </address>
    </div>
  </div>

  <div class="col-12 col-lg-6">
    <h3 class="text-center">Features</h3>
    <table class="table">
      <tr>
        <th>Air conditioning</th>
        <td><%= check_it(@house.checkbox.air_conditioning) %></td>

        <th>Balcony</th>
        <td><%= check_it(@house.checkbox.balcony) %></td>
      </tr>
      <tr>
        <th>Utilities included</th>
        <td><%= check_it(@house.checkbox.include_utility) %></td>

        <th>Pets allowed</th>
        <td><%= check_it(@house.checkbox.pets_allowed) %></td>
      </tr>
      <tr>
        <th>Private bathroom</th>
        <td><%= check_it(@house.checkbox.private_bathroom) %></td>

        <th>Private bedroom</th>
        <td><%= check_it(@house.checkbox.private_bedroom) %></td>
      </tr>
      <tr>
        <th>Refrigerator</th>
        <td><%= check_it(@house.checkbox.refrigerator) %></td>

        <th>Near bus line</th>
        <td><%= check_it(@house.checkbox.near_bus_line) %></td>
      </tr>

      <tr>
        <th>Smoking allowed</th>
        <td><%= check_it(@house.checkbox.smoke_allowed) %></td>
      </tr>
    </table>
  </div>
</div>

<%= link_to "Back", houses_path %>
